<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="sample.FormController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    <Text text="Add Customer"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="Customer Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="customerName"
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Phone number:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="phoneNo"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label text="Address"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="address"
            GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Label text="Survey question 1"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <ComboBox fx:id = "q1"
              GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Label text="Survey question 2"
           GridPane.columnIndex="0" GridPane.rowIndex="5"/>

    <ComboBox fx:id = "q2"
              GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Label text="Survey question 3"
           GridPane.columnIndex="0" GridPane.rowIndex="6"/>

    <ComboBox fx:id = "q3"
              GridPane.columnIndex="1" GridPane.rowIndex="6"/>



    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button text="Add to database" id="buttonAdd"
                onAction="#get"/>
    </HBox>

    <Text fx:id="actiontarget"
          GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.halignment="RIGHT" GridPane.rowIndex="10"/>
</GridPane>